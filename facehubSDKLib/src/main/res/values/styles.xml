<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EmoStoreTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#989898</item>
    </style>

    <style name="demo_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:onClick">onClick</item>
    </style>

    <!-- RadiusLayout -->
    <style
        name="Widget.RadiusLayout" parent="@android:style/Widget">
    </style>


    <style name="mode_chose_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@android:color/white</item>
    </style>


    <style name="download_text_btn">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/facehub_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/radius_rectangle_white_frame</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:text">下载</item>
    </style>
</resources>
