<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/delete_back"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_manage_item_height"
        android:background="#fff63542">

        <TextView
            android:layout_width="65.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="end|center"
            android:gravity="center"
            android:text="删除"
            android:textColor="@android:color/white"
            android:textSize="15.0sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/front"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_manage_item_height"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/up_divider"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_gravity="top"
            android:src="#ffe0e0e0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/list_manage_item_height"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="37.0dip"
                android:layout_height
                    ="37.0dip"
                android:layout_gravity="center_vertical"
                android:layout_margin="12.0dip">

                <com.azusasoft.facehubcloudsdk.views.viewUtils.SpImageView
                    android:id="@+id/cover_image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

                <ImageView
                    android:id="@+id/default_list_cover"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_gravity="center"
                    android:src="@drawable/emo_keyboard_default_cover"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/list_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="一个列表"
                android:textColor="#ff323232"
                android:textSize="15.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/right0"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="end|center"
                android:layout_marginRight="13.0dip"
                android:layout_weight="1.0">

                <FrameLayout
                    android:layout_width="44.0dip"
                    android:layout_height="25.0dip"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/download_text"
                        style="@style/download_text_btn"
                        android:layout_gravity="start|center"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/sync_text"
                        style="@style/download_text_btn"
                        android:layout_gravity="start|center"
                        android:background="@drawable/radius_rectangle_white"
                        android:text="同步"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                    <com.azusasoft.facehubcloudsdk.views.viewUtils.CollectProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="fill_parent"
                        android:layout_height="4.0dip"
                        android:layout_gravity="start|center"
                        android:visibility="gone" />
                </FrameLayout>
            </FrameLayout>

            <ImageView
                android:id="@+id/touch_view"
                android:layout_width="42.0dip"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="end|center"
                android:alpha="0.6"
                android:padding="8.0dip"
                android:src="@drawable/ic_reorder_black"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/divider"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_gravity="bottom"
            android:src="#ffe0e0e0" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/undo"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_manage_item_height"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:visibility="gone">

        <TextView
            android:id="@+id/undo_text"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2.0"
            android:gravity="start|center"
            android:text="Deleted"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/undo_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="end|center"
            android:text="UNDO"
            android:textColor="?colorAccent"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>