<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <TextView
                android:id="@+id/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp" />
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--<Button-->
                    <!--android:id="@+id/jump_to_more"-->
                    <!--style="@style/demo_btn"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:text="显示更多" />-->

                <Button
                    android:id="@+id/jump_to_store"
                    style="@style/demo_btn"
                    android:layout_width="match_parent"
                    android:text="显示商店" />
                <Button
                    android:id="@+id/jump_to_manage_list"
                    style="@style/demo_btn"
                    android:layout_width="match_parent"
                    android:text="显示列表编辑" />

                <Button
                    android:id="@+id/jump_to_manage"
                    style="@style/demo_btn"
                    android:layout_width="match_parent"
                    android:text="显示编辑" />

                <Button
                    android:id="@+id/jump_to_keyboard"
                    style="@style/demo_btn"
                    android:layout_width="match_parent"
                    android:text="显示键盘" />

                <Button
                    android:id="@+id/btn_get_banner"
                    style="@style/demo_btn"
                    android:text="拉取banner" />

                <Button
                    android:id="@+id/get_tags_by_param"
                    style="@style/demo_btn"
                    android:text="自定义参数拉tags" />

                <Button
                    android:id="@+id/get_tags_by_section"
                    style="@style/demo_btn"
                    android:text="section拉tags" />

                <Button
                    android:id="@+id/get_pkgs_by_param"
                    style="@style/demo_btn"
                    android:text="自定义param拉取packages" />

                <Button
                    android:id="@+id/get_pkgs_by_section"
                    style="@style/demo_btn"
                    android:text="section拉packages" />

                <Button
                    android:id="@+id/get_pkg_detail"
                    style="@style/demo_btn"
                    android:text="拉取包详情" />

                <Button
                    android:id="@+id/collect_emo"
                    style="@style/demo_btn"
                    android:text="收藏表情" />

                <Button
                    android:id="@+id/collect_pkg_2new"
                    style="@style/demo_btn"
                    android:text="收藏包到新列表" />

                <Button
                    android:id="@+id/collect_pkg"
                    style="@style/demo_btn"
                    android:text="收藏包到已有列表" />

                <Button
                    android:id="@+id/get_emo"
                    style="@style/demo_btn"
                    android:text="拉取单个表情" />

                <Button
                    android:id="@+id/get_user_list"
                    style="@style/demo_btn"
                    android:text="拉取个人列表" />

                <Button
                    android:id="@+id/remove_emos"
                    style="@style/demo_btn"
                    android:text="批量删除" />

                <Button
                    android:id="@+id/remove_emo"
                    style="@style/demo_btn"
                    android:text="删除单个表情" />

                <Button
                    android:id="@+id/create_list"
                    style="@style/demo_btn"
                    android:text="新建列表" />

                <Button
                    android:id="@+id/rename_list"
                    style="@style/demo_btn"
                    android:text="重命名列表" />

                <Button
                    android:id="@+id/delete_list"
                    style="@style/demo_btn"
                    android:text="删除列表" />

                <Button
                    android:id="@+id/move_emo"
                    style="@style/demo_btn"
                    android:text="移动表情" />

                <Button
                    android:id="@+id/remove_all"
                    style="@style/demo_btn"
                    android:text="删除全部" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
